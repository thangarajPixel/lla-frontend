{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "description": "Next.js 16 boilerplate with SWR, Biome, Husky, and Tailwind CSS",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "biome format --write .",
    "lint": "biome lint .",
